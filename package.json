    "clean": "lerna clean -y && rm -rf node_modules"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "concurrently": "^8.2.0",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "lerna": "^8.2.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {}
}
