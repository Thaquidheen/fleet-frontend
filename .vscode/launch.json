{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Admin Dashboard (Next.js)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/apps/admin-dashboard/node_modules/next/dist/bin/next",
      "args": ["dev"],
      "cwd": "${workspaceFolder}/apps/admin-dashboard",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Debug Operations Dashboard (Vite)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/apps/operations-dashboard/node_modules/.bin/vite",
      "args": ["dev"],
      "cwd": "${workspaceFolder}/apps/operations-dashboard",
      "console": "integratedTerminal"
    },
    {
      "name": "Debug API Client Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/packages/api-client/node_modules/.bin/jest",
      "args": ["--runInBand", "--no-cache", "--watchAll=false"],
      "cwd": "${workspaceFolder}/packages/api-client",
      "console": "integratedTerminal"
    }
  ]
}
