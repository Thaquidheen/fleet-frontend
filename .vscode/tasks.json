{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "🏗️ Bootstrap All Packages",
      "type": "shell",
      "command": "npx lerna bootstrap",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "🔨 Build All Packages",
      "type": "shell",
      "command": "npx lerna run build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "🚀 Start Admin Dashboard",
      "type": "shell",
      "command": "npx run dev",
      "options": {
        "cwd": "${workspaceFolder}/apps/admin-dashboard"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "🎨 Build Shared Components",
      "type": "shell",
      "command": "npx run build",
      "options": {
        "cwd": "${workspaceFolder}/packages/shared-components"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "🔌 Build API Client",
      "type": "shell",
      "command": "npx run build",
      "options": {
        "cwd": "${workspaceFolder}/packages/api-client"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "🧹 Clean All",
      "type": "shell",
      "command": "npx lerna clean -y && rm -rf node_modules",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "🔍 Type Check All",
      "type": "shell",
      "command": "lerna run type-check --parallel",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "✅ Lint All",
      "type": "shell",
      "command": "lerna run lint --parallel",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "🧪 Test All",
      "type": "shell",
      "command": "lerna run test --parallel",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
